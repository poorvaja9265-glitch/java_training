import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner S=new Scanner(System.in);
        int N;
        N=S.nextInt();
        if(N%5==0)
        {
            System.out.println("Yes");
        }
        else
        {
         System.out.println("No");   
        }
    }
}
