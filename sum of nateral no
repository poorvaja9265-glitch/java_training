import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int n;
        int sum=0;
        n=s.nextInt();
        for(int i=0;i<=n;i++)
        {
          sum+=i;
           
        }
         System.out.println(sum);
    }
}
